{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../Scripts/App/",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "typings/index",
    "typings/index.d.ts"
  ]
}
